#ranger
super + e
	alacritty -e ranger

#Browser
super + b
    firefox

#archlinux-logout
super + x
    archlinux-logout

#Rofi theme selector
#super + r
#    rofi-theme-selector

super + m
	rofi -show drun

#Pavucontrol
super + v
    pavucontrol

#alacritty
#super + Return
#    alacritty

#Keyboard dependent

